<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.am.socket.dao.UserMapper">
    <select id="findUser" parameterType="String" resultType="User">
        SELECT * from user where user.user_name=#{username}
    </select>

    <select id="findMoreUser" resultType="User">
        SELECT *
        from user u
        where user_name in
        <foreach item="more_username" index="index" collection="list"
                 open="(" separator="," close=")">
            #{more_username}
        </foreach>
    </select>
    
    <select id=" id=findUserFromAccount" parameterType="String" resultType="User">
        SELECT * FROM account where user.user_name=#{username}
    </select>

</mapper>

